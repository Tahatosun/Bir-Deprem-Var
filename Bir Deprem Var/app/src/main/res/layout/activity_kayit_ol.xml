<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:orientation="vertical"
    tools:context=".KayitOl">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_margin="20dp">

        <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <Space
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.2" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:text="Kayıt Ol"
            android:layout_weight="1.5"
            android:textColor="@color/bizim3"
            android:textSize="30dp"
            android:textStyle="bold"
            android:textAlignment="center"/>

            <Space
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"/>

            <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:text="Ad Soyad"
            android:textColor="@color/bizim3"
            android:textSize="20dp"
            android:textStyle="bold"
            android:textAlignment="center"
            android:layout_marginBottom="3dp"/>

        <EditText
            android:id="@+id/txtKayitOlAdSoyad"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:inputType="textPersonName"
            android:layout_weight="2"
            android:hint="Ad Soyad"
            android:background="@color/bizim2"
            android:textColor="@color/beyaz"
            android:textAlignment="center"/>
        <TextView
            android:id="@+id/textView1"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:text="E-posta"
            android:textColor="@color/bizim3"
            android:textSize="20dp"
            android:textStyle="bold"
            android:textAlignment="center"
            android:layout_marginBottom="3dp"/>

        <EditText
            android:id="@+id/txtKayitOlEposta"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:inputType="textPersonName"
            android:layout_weight="2"
            android:hint="E-posta"
            android:background="@color/bizim2"
            android:textColor="@color/beyaz"
            android:textAlignment="center"/>
        <TextView
            android:id="@+id/textView3"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:text="Telefon Numarası"
            android:textColor="@color/bizim3"
            android:textSize="20dp"
            android:textStyle="bold"
            android:textAlignment="center"
            android:layout_marginBottom="3dp"/>

        <EditText
            android:id="@+id/txtKayitOltelefon"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:inputType="number"
            android:layout_weight="2"
            android:hint="Telefon numarası"
            android:background="@color/bizim2"
            android:textColor="@color/beyaz"
            android:textAlignment="center"/>
        <TextView
            android:id="@+id/textView4"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:text="Yaşadığın Şehir"
            android:textColor="@color/bizim3"
            android:textSize="20dp"
            android:textStyle="bold"
            android:textAlignment="center"
            android:layout_marginBottom="3dp"/>

        <Spinner
            android:id="@+id/spnKayitOlsehir"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:textAlignment="center"
            android:background="@color/bizim2"

            />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginBottom="3dp"
                android:layout_weight="1"
                android:text="Parola"
                android:textAlignment="center"
                android:textColor="@color/bizim3"
                android:textSize="20dp"
                android:textStyle="bold" />

            <EditText
            android:id="@+id/txtKayitOlParolaFirst"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:inputType="textPassword"
            android:layout_weight="2"
            android:hint="Parola"
            android:background="@color/bizim2"
            android:textColor="@color/beyaz"
            android:textAlignment="center"/>
        <TextView
            android:id="@+id/textView6"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:text="Parola Tekrar"
            android:textColor="@color/bizim3"
            android:textSize="20dp"
            android:textStyle="bold"
            android:textAlignment="center"
            android:layout_marginBottom="3dp"/>

        <EditText
            android:id="@+id/txtKayitOlParolaSecond"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:inputType="textPassword"
            android:layout_weight="2"
            android:hint="Parola Tekrar"
            android:background="@color/bizim2"
            android:textColor="@color/beyaz"
            android:textAlignment="center"/>

        <Space
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.5"/>

        <Button
            android:id="@+id/btnKayitOl"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:background="@color/bizim3"
            android:text="Kayıt Ol"
            android:textColor="@color/bizim1"
            android:textSize="20dp"
            android:textStyle="bold"
            android:onClick="KullaniciOlustur"/>


    </LinearLayout>

    </LinearLayout>

</LinearLayout>