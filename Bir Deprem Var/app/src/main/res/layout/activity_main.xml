<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@drawable/background">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_margin="18dp">


        <ImageView
            android:id="@+id/imageView"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="20"
            android:src="@drawable/logo" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="20"
            android:orientation="vertical">

            <Space
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.8" />

            <TextView
                android:id="@+id/textView"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="E-Posta"
                android:textColor="@color/bizim3"
                android:textSize="25dp"
                android:textStyle="bold"
                android:textAlignment="center"
                android:layout_marginBottom="3dp"/>

            <EditText
                android:id="@+id/txtgirisKullaniciAdi"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:inputType="textPersonName"
                android:layout_weight="2"
                android:hint="E-posta"
                android:background="@color/bizim2"
                android:textColor="@color/beyaz"
                android:textAlignment="center"/>
            <Space
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.5" />

            <TextView
                android:id="@+id/textView1"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="Parola"
                android:textColor="@color/bizim3"
                android:textSize="25dp"
                android:textStyle="bold"
                android:textAlignment="center"
                android:layout_marginBottom="3dp"/>

            <EditText
                android:id="@+id/txtgirissifre"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="2"
                android:hint="Parola"
                android:inputType="textPassword"
                android:background="@color/bizim2"
                android:textColor="@color/beyaz"
                android:textAlignment="center"/>
            <Space
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.5" />

            <Button
                android:id="@+id/btnGirisYap"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1.5"
                android:background="@color/bizim3"
                android:textColor="@color/bizim1"
                android:text="Giriş Yap"
                android:textSize="20dp"
                android:textStyle="bold"
                android:onClick="GirisYap"/>
            <Space
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.5" />

            <Button
                android:id="@+id/btnKayıtOl"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1.5"
                android:background="@color/bizim3"
                android:text="Kayıt Ol"
                android:textColor="@color/bizim1"
                android:textSize="20dp"
                android:textStyle="bold"
                android:onClick="KayitOl"/>

        </LinearLayout>




    </LinearLayout>



</LinearLayout>